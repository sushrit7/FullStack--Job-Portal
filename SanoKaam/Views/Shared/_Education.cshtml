@using HtmlHelpers.BeginCollectionItemCore;
@model Education




<tr class="education">
    @using (Html.BeginCollectionItem("Education"))
    {   
        <td>
            <input asp-for="id" hidden value=@Model.id>
            @Html.EditorFor(Model => Model.YearOfGraduation, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Enter Your Year Of Graduation" } })
        </td>
        <td>
            @Html.EditorFor(Model => Model.Degree, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Enter Your Degree"} })
        </td>
        <td>
            @Html.EditorFor(Model => Model.Level, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Enter Your Level"} })
        </td>
        <td>
            @Html.EditorFor(Model => Model.Grade, new { htmlAttributes = new { @class = "form-control" , @placeholder = "Enter Your Obtained Grade"} })
        </td>
        <td>
            @Html.EditorFor(Model => Model.Institution, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Your Institution" } })
        </td>
        <td>

            <a class="btn btn-danger deleteRow" value =@Model.id>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5Zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6Z" />
                    <path d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1ZM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118ZM2.5 3h11V2h-11v1Z" />
                </svg>
            </a>
        </td>
    }
</tr>

<script>
    $(".deleteRow").click(function () {

        $(this).parents(".education").remove();
        deleteexperiencefromDB($(this).attr('value'));
    });

    function deleteexperiencefromDB(id) {
        $.ajax({
           
            type: 'POST',
            url: '/ProfessionalProfile/RemoveEducation',
