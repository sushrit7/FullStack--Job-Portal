@model List<Job>
@{
    ViewData["Title"] = "Home Page";
}

<section style="background-color:#57C5B6">
    <div class="row gx-0">
        <div class="text-center col-lg-6 col-md-12 homepagetext " style="">
            <div class="p-md-5 p-sm-5 ">
            <h2 class="display-4" style="font-weight:600;"><i> Look/Hire</i></h2>
            <h2 class="display-4" style="font-weight:600;"><i> For A</i></h2>
            <h2 class="display-4" style="font-weight:800;color:#004A4F;"><i>SANOKAAM</i></h2>
            </div>
        </div>
        <div class="col-lg-6 col-md-12 col-sm-12 text-center ">
            <img src="~/img/businessman.png" class="my-image" />
        </div>
    </div>
</section>


<div class="owl-carousel owl-theme">
    @foreach (var job in Model)
    {
        <div class="item d-flex justify-content-center">
            <a asp-controller="Work" asp-action="ViewMore" asp-route-id=@job.Id class="btn">
                <div class=" mt-3 d-flex justify-content-center ">
                    <div class=" flex-column justify-content-center" style="text-align: center;">
                        <img id="preview" src="@Url.Action("GetLogo", "ProfessionalProfile", new { id = @job.Id })" alt="Profile Photo" width="175" height="175" style="object-fit:contain;" />
                        <div class="d-flex flex-column justify-content-center text-center">
                            <h3>@job.JobTitle</h3>
                            <p>@job.CompanyName</p>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        $(".owl-carousel").owlCarousel({
            items: 3,
            margin: 10,
            loop: true,
            autoplay: true,
            autoplayTimeout: 2000,
            autoplayHoverPause: true,
        });
    });
</script>



